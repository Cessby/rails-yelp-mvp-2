
<div class="col-6" style="margin: 0 auto">
  <div class="text-center">
    <h1><%= @restaurant.name %> ðŸ˜‹</h1>
  </div>
    <hr>

  <p> <strong>Food-type : </strong> <%= @restaurant.category %> </p>
  <p> <strong>Address : </strong> <%=  @restaurant.address %> </p>

  <div class="mt-5">
    <hr>
  </div>

  <div class="d-flex justify-content-beetween mt-4">
    <h2> Reviews -&nbsp; </h2>
      <% stars = "â­ï¸" %>
      <% count = 0 %>
      <% @restaurant.reviews.each do |review| %>
      <% count += review.rating %>
      <% end %>
    <h3> <%= (count.fdiv(@restaurant.reviews.length)).round(1) %> <%= stars * (count / @restaurant.reviews.length) %></h3>
  </div>


  <div class="mt-3 mb-3">
    <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <span><strong>Comment :</strong> <%= review.content %></span><span class="badge badge-primary badge-pill"><%= review.rating %></span></li>
    <% end %>
  </div>

  <div class="mt-5">
    <hr>
  </div>

  <div class="mt-3 mb-5">
    <h3> Add a Reviews </h3>
    <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :content %>
      <%= f.input :rating %>

      <%= f.submit "add a review", class: "btn btn-primary" %>
    <% end %>
  </div>

  <%= link_to "Restaurant list", restaurants_path, class: "btn btn-primary"%>
</div>
