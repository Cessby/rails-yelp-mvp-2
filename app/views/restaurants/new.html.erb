  <div class="text-center">
    <h1>Create a New Restaurant</h1>
  </div>

<%= simple_form_for (@restaurant) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category %>

  <%= f.submit "add a restaurant", class: "btn btn-primary" %>
<% end %>


